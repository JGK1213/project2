<div id="container-fluid">
<h1>Edit your event description!</h1>
<h1><%= @event.event %></h1>

<%= form_for @event do |f| %>
	<div class="field">
		<%= f.label :event %><br>
		<%= f.text_area :event %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
<br><br>


<%= link_to "Take me back to the finished event", userprofile_path %>
</div>